
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions
    function isSignedIn() {
      return request.auth != null;
    }

    function isUser(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    function isDoctor() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'doctor';
    }

    // USERS
    // Users can be read by any authenticated user (to see doctor profiles)
    // A user can only create/update/delete their own document.
    match /users/{userId} {
      allow read: if isSignedIn();
      allow write: if isUser(userId);
    }

    // APPOINTMENTS
    // Only the patient or the doctor involved in an appointment can read or write to it.
    match /appointments/{appointmentId} {
      allow read, write: if isSignedIn() && (
        request.auth.uid == resource.data.patient.uid ||
        request.auth.uid == resource.data.doctor.uid
      );
    }

    // PRESCRIPTIONS
    // Only the patient or the doctor involved can read or write. Doctors can create.
    match /prescriptions/{prescriptionId} {
        allow read, update, delete: if isSignedIn() && (
            request.auth.uid == resource.data.patient.uid ||
            request.auth.uid == resource.data.doctor.uid
        );
        allow create: if isDoctor();
    }
    
    // CHATS & MESSAGES
    // A user can read/write a chat document if they are one of the two participants.
    // A user can create a chat document if they are one of the two participants.
    match /chats/{chatId} {
      allow read, update, delete: if isSignedIn() && request.auth.uid in resource.data.users;
      allow create: if isSignedIn() && request.auth.uid in request.resource.data.users;

      // Messages can only be read/written by participants of the parent chat.
      match /messages/{messageId} {
        allow read, write: if isSignedIn() && request.auth.uid in get(/databases/$(database)/documents/chats/$(chatId)).data.users;
      }
    }
  }
}
